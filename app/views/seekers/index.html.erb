<%= simple_form_for :refresh, html: { id: 'refresh_form' }, remote: true do |f| %>
  <%= f.input :post, as: :string %>
<% end %>
<button id="seekers_ajax_btn">Refresh</button>

<table>
  <thead>
    <td>Date</td>
    <td>Author</td>
    <td>Body</td>
    <td>Location</td>
    <td>Email</td>
    <td>Keywords</td>
  </thead>

  <tbody>

    <% @seekers.each do |seeker| %>
      <tr>
        <td><%= seeker.date_posted %></td>
        <td><%= seeker.author %></td>
        <td><%= truncate(seeker.body, length: 40) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>

  </tbody>
</table>

