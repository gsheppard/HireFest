<%= simple_form_for :refresh, html: { id: 'refresh_form' }, remote: true do |f| %>
  <%= f.input :post, as: :string %>
<% end %>
<button id="ajax_btn">Refresh</button>

<table>
  <thead>
    <td>Date</td>
    <td>Author</td>
    <td>Body</td>
    <td>Location</td>
    <td>Email</td>
    <td>Keywords</td>
  </thead>

  <tbody>

    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.date_posted %></td>
        <td><%= job.author %></td>
        <td><%= truncate(job.body, length: 40) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>

  </tbody>
</table>
